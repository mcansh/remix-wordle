{
  "name": "remix-wordle",
  "private": true,
  "description": "a wordle game made with Remix",
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "build:remix": "remix build",
    "build:css": "tailwindcss -o ./app/styles/global.css --minify",
    "build": "cross-env NODE_ENV=production build:*",
    "dev:css": "tailwindcss -o app/styles/global.css --watch",
    "dev:remix": "remix dev",
    "dev": "cross-env NODE_ENV=development run-p dev:*",
    "start": "cross-env NODE_ENV=production remix-serve build"
  },
  "dependencies": {
    "@remix-run/node": "1.6.5",
    "@remix-run/react": "1.6.5",
    "@remix-run/serve": "1.6.5",
    "clsx": "1.2.1",
    "cross-env": "7.0.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tiny-invariant": "1.2.0",
    "type-fest": "2.16.0"
  },
  "devDependencies": {
    "@remix-run/dev": "1.6.5",
    "@types/jest": "28.1.5",
    "@types/react": "18.0.15",
    "@types/react-dom": "18.0.6",
    "jest": "28.1.3",
    "jest-esbuild": "0.2.9",
    "npm-run-all": "4.1.5",
    "tailwindcss": "3.1.6",
    "typescript": "4.7.4"
  },
  "engines": {
    "node": ">=14"
  }
}
