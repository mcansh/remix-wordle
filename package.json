{
  "name": "remix-wordle",
  "private": true,
  "description": "a wordle game made with Remix",
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "prepare": "husky install",
    "build:css": "tailwindcss -o ./app/styles/global.css --minify",
    "build:remix": "remix build",
    "build": "cross-env NODE_ENV=production run-s build:*",
    "dev:css": "tailwindcss -o app/styles/global.css --watch",
    "dev:remix": "remix dev",
    "dev": "cross-env TZ=UTC NODE_ENV=development run-p dev:*",
    "start": "cross-env TZ=UTC NODE_ENV=production remix-serve build",
    "lint": "eslint --fix --cache --ignore-path .gitignore .",
    "format": "prettier --write --ignore-path .gitignore ."
  },
  "dependencies": {
    "@prisma/client": "4.7.1",
    "@remix-run/node": "1.8.0",
    "@remix-run/react": "1.8.0",
    "@remix-run/serve": "1.8.0",
    "bcryptjs": "2.4.3",
    "clsx": "1.2.1",
    "cross-env": "7.0.3",
    "date-fns": "2.29.3",
    "isbot": "3.6.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "type-fest": "3.3.0",
    "zod": "3.19.1"
  },
  "devDependencies": {
    "@remix-run/dev": "1.8.0",
    "@remix-run/eslint-config": "1.8.0",
    "@types/bcryptjs": "2.4.2",
    "@types/jest": "29.2.4",
    "@types/react": "18.0.26",
    "@types/react-dom": "18.0.9",
    "eslint": "8.29.0",
    "eslint-plugin-prefer-let": "3.0.1",
    "husky": "8.0.2",
    "jest": "29.3.1",
    "jest-esbuild": "0.2.9",
    "lint-staged": "13.1.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.8.4",
    "prettier-plugin-tailwindcss": "0.2.0",
    "prisma": "4.7.1",
    "tailwindcss": "3.2.4",
    "typescript": "4.9.3"
  },
  "engines": {
    "node": ">=14"
  }
}
