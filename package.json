{
  "name": "remix-wordle",
  "private": true,
  "description": "a wordle game made with Remix",
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "prepare": "husky install",
    "build:css": "tailwindcss -o ./app/styles/global.css --minify",
    "build:remix": "remix build",
    "build": "cross-env NODE_ENV=production run-s build:*",
    "dev:css": "tailwindcss -o app/styles/global.css --watch",
    "dev:remix": "remix dev",
    "dev": "cross-env TZ=UTC NODE_ENV=development run-p dev:*",
    "start": "cross-env TZ=UTC NODE_ENV=production remix-serve build",
    "lint": "eslint --fix --cache --ignore-path .gitignore .",
    "format": "prettier --write --ignore-path .gitignore ."
  },
  "dependencies": {
    "@prisma/client": "^4.12.0",
    "@remix-run/node": "^1.15.0",
    "@remix-run/react": "^1.15.0",
    "@remix-run/serve": "^1.15.0",
    "bcryptjs": "^2.4.3",
    "clsx": "^1.2.1",
    "cross-env": "^7.0.3",
    "date-fns": "^2.29.3",
    "isbot": "^3.6.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-utils": "^6.1.0",
    "type-fest": "^3.8.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.15.0",
    "@remix-run/eslint-config": "^1.15.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/jest": "^29.5.0",
    "@types/react": "^18.0.35",
    "@types/react-dom": "^18.0.11",
    "eslint": "^8.37.0",
    "eslint-plugin-prefer-let": "^3.0.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-esbuild": "^0.2.9",
    "lint-staged": "^13.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.7",
    "prettier-plugin-tailwindcss": "^0.2.7",
    "prisma": "^4.12.0",
    "tailwindcss": "^3.3.1",
    "typescript": "^5.0.4"
  },
  "engines": {
    "node": ">=14"
  }
}
