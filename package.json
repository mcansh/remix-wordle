{
  "name": "remix-wordle",
  "private": true,
  "description": "a wordle game made with Remix",
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "build:css": "tailwindcss -o ./app/styles/global.css --minify",
    "build:remix": "remix build",
    "build": "cross-env NODE_ENV=production run-s build:*",
    "dev:css": "tailwindcss -o app/styles/global.css --watch",
    "dev:remix": "remix dev",
    "dev": "cross-env TZ=UTC NODE_ENV=development run-p dev:*",
    "start": "cross-env TZ=UTC NODE_ENV=production remix-serve build"
  },
  "dependencies": {
    "@prisma/client": "4.3.1",
    "@remix-run/node": "1.7.2",
    "@remix-run/react": "1.7.2",
    "@remix-run/serve": "1.7.2",
    "bcryptjs": "2.4.3",
    "clsx": "1.2.1",
    "cross-env": "7.0.3",
    "date-fns": "2.29.3",
    "isbot": "3.6.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "type-fest": "3.0.0",
    "zod": "3.19.1"
  },
  "devDependencies": {
    "@remix-run/dev": "1.7.2",
    "@types/bcryptjs": "2.4.2",
    "@types/jest": "29.0.3",
    "@types/react": "18.0.21",
    "@types/react-dom": "18.0.6",
    "jest": "29.0.3",
    "jest-esbuild": "0.2.9",
    "npm-run-all": "4.1.5",
    "prisma": "4.3.1",
    "tailwindcss": "3.1.8",
    "typescript": "4.8.3"
  },
  "engines": {
    "node": ">=14"
  }
}
